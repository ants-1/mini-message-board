
extends layout

block content
  h1 New Message Form
  
  form(method="POST" action="/new")
    div
      label(for="author") Author:
      input(type="text" id="author" name="author")
    div
      label(for="message") Message:
      textarea(id="message" name="message" rows="4" cols="50")
    div
      button(type="submit") Submit

